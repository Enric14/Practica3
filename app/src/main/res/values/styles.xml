<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SHAPE-APPEARANCE BTN -->
    <style name="ShapeAppearance.Tokio.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- SHAPE-APPEARANCE INPUT LAYOUT -->
    <style name="ShapeAppearance.Tokio.InputLayout" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- BOTONES -->
    <style name="Button.Filled.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:textAppearance">@style/TextAppearance.ViewsComplejasYDinamicas.Button</item>
    </style>

    <!-- INPUTS LAYOUTS -->
    <style name="InputLayout.Filled.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ViewsComplejasYDinamicas.Body1</item>


    </style>


</resources>